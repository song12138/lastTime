<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.dao.RoleDao">

    <select id="findRoleByUserId" resultType="Role" parameterType="java.lang.String">
        <!--SELECT *-->
        <!--FROM-->
        <!--sys_user_role-->
        <!--<where>-->
            <!--<if test="userId != null and userId != ''">-->
                <!--AND user_id=#{userId}-->
            <!--</if>-->
        <!--</where>-->

        SELECT a.*
        FROM
        sys_role a
        LEFT JOIN sys_user_role b ON a.id=b.role_id
        <where>
            <if test="userId != null and userId != ''">
            AND b.user_id=#{userId}
            </if>
        </where>
    </select>
</mapper>